---
import { Button, Collapse, Spoiler, Timeline } from 'astro-pure/user'
import PageLayout from '@/layouts/CommonPage.astro'
import Substats from '@/components/about/Substats.astro'
import ToolSection from '@/components/about/ToolSection.astro'

const headings = [
  { depth: 2, slug: 'hobbies', text: 'Hobbies' },
  { depth: 2, slug: 'tools', text: 'Tools' },
  { depth: 2, slug: 'social-networks', text: 'Social Networks' },
  { depth: 2, slug: 'gossips', text: 'Gossips' },
  { depth: 2, slug: 'about-blog', text: 'About Blog' }
]
---

<PageLayout title='About' {headings}>
  <p> Control Engineer / Embedded System Engineer</p>
  <p>
    你好，我叫JasonZhang
  </p>
  <p>
    My motto: One must imagine Sisyphus happy. 
  </p>
  <Button title='Sponsor Me' class='w-fit' href='/projects#sponsorship' variant='ahead' />

  {/* general-talk */}
  <h2 id='hobbies'>Hobbies</h2>
  <ul>
    <li> 足球，足球，足球。巴萨和河南队的粉丝，阿根廷和中国队的粉丝。</li>
   </ul>

  {/* tools */}
  <h2 id='tools'>Tools</h2>
  <p>Current support tools as follow:</p>
  <ToolSection
    class='mb-5'
    title='Control Design'
    tools={[
      {
        name: 'MATLAB',
        description: 'Controller Design',
        href: 'https://ww2.mathworks.cn/en/products/matlab.html',
        icon: import('@/assets/tools/matlab-copy.svg?raw')
      },
      {
        name: 'Simulink',
        description: 'Controll Design, Simulation and Deployment',
        href: 'https://ww2.mathworks.cn/en/products/simulink.html',
        icon: import('@/assets/tools/simulink.svg?raw')
      },
    ]}
  />
  <ToolSection
    class='mb-5'
    title='Productivity'
    tools={[
      {
        name: 'Notion',
        description: 'Note Taking',
        href: 'https://www.notion.so/',
        icon: import('@/assets/tools/notion.svg?raw')
      },
      {
        name: 'Typora',
        description: 'Markdown Editor',
        href: 'https://typora.io/',
        icon: import('@/assets/tools/typora.svg?raw')
      },
      {
        name: 'Obsidian',
        description: 'Personal Knowledge Database',
        href: 'https://obsidian.md/',
        icon: import('@/assets/tools/obsidian.svg?raw')
      }
    ]}
  />
  <ToolSection
    class='mb-5'
    title='Development'
    tools={[
      {
        name: 'VS Code',
        description: 'IDE',
        href: 'https://code.visualstudio.com/',
        icon: import('@/assets/tools/vscode.svg?raw')
      },
      {
        name: 'Pycharm',
        description: 'Python IDE for Personal Use',
        href: 'https://www.jetbrains.com/pycharm/',
        icon: import('@/assets/tools/Pycharm.svg?raw')
      },
      {
        name: 'CLion',
        description: 'C/C++ IDE for Personal Use',
        href: 'https://www.jetbrains.com/clion/',
        icon: import('@/assets/tools/Clion.svg?raw')
      },
    ]}
  />
  <ToolSection
    class='mb-5'
    title='Environment'
    tools={[
      {
        name: 'Ubuntu 24.04 LTS',
        description: 'Linux Distribution',
        href: 'https://ubuntu.com/',
        icon: import('@/assets/tools/ubuntu.svg?raw')
      },
      {
        name: 'Windows 11',
        description: 'Nominal Development Environment',
        href: 'https://news.microsoft.com/windows11-general-availability/',
        icon: import('@/assets/tools/windows11.svg?raw')
      }
    ]}
  />

  {/* social-networks */}
  <h2 id='social-networks'>Social Networks</h2>
  <p>
    你也可以在以下平台找到我
  </p>
  <Substats
    stats={[
      {
        platform: 'GitHub',
        icon: 'github',
        link: 'https://github.com/JasonZhang0119',
        text: 'followers',
        api: 'github/JasonZhang0119'
      },
    ]}
  />

</PageLayout>
